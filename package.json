{
  "name": "bizpilot-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "BizPilot v2.0 - Modern Multi-Business Management Platform",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:all": "pwsh -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\start-dev.ps1",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:build": "pnpm --filter frontend build",
    "frontend:test": "pnpm --filter frontend test",
    "backend:dev": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:test": "cd backend && python -m pytest --cov --cov-report=term-missing --cov-report=xml --cov-fail-under=45",
    "backend:check-migrations": "cd backend && python scripts/check_alembic_revision_lengths.py",
    "backend:migrate": "cd backend && python -m alembic upgrade head",
    "beads:sync": "pwsh -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\beads-sync.ps1",
    "scan:unused-imports": "cd scripts && pnpm scan:unused-imports"
  },
  "keywords": [
    "bizpilot",
    "business-management",
    "multi-business",
    "invoicing",
    "inventory"
  ],
  "author": "BizPilot Team",
  "license": "MIT",
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa"
}
