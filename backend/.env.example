# BizPilot v2.0 Backend Environment Variables
# Copy this file to .env and update the values

# Application
APP_NAME=BizPilot
DEBUG=true
ENVIRONMENT=development

# Database
# For local development:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bizpilot

# Redis
REDIS_URL=redis://localhost:6379/0
# For production with TLS and authentication:
# REDIS_URL=rediss://:password@redis-host:6379/0

# JWT Configuration (REQUIRED - generate a secure key for production)
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Encryption for sensitive data (REQUIRED for POS API keys)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DB_ENCRYPTION_KEY=

# Security Configuration
# Comma-separated list of trusted proxy IPs for rate limiting
TRUSTED_PROXY_IPS=127.0.0.1,10.0.0.0/8

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Email Configuration
# Set EMAILS_ENABLED=true in production to enable email sending
EMAILS_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_STARTTLS=false
SMTP_TIMEOUT=10
EMAILS_FROM_EMAIL=noreply@bizpilot.com
EMAILS_FROM_NAME=BizPilot

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AI Assistant (OpenAI or Groq)
OPENAI_API_KEY=
GROQ_API_KEY=

# Paystack (South Africa Payment Gateway)
# Get keys from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Frontend URL (for payment callbacks)
FRONTEND_URL=http://localhost:3000

# Cookie Settings
# Leave empty for localhost, set to your domain in production
COOKIE_DOMAIN=
# Set to true in production (requires HTTPS)
COOKIE_SECURE=false
# 'lax' for same-origin, 'none' for cross-origin (requires Secure)
COOKIE_SAMESITE=lax

# Scheduler Configuration
# Schedule type: "cron" or "interval"
OVERDUE_INVOICE_SCHEDULE_TYPE=cron
# For cron: use cron expression (e.g., "0 0 * * *" for daily at midnight)
# For interval: use hours (e.g., "24" for every 24 hours)
OVERDUE_INVOICE_SCHEDULE_VALUE=0 0 * * *
# Batch size for processing invoices
OVERDUE_INVOICE_BATCH_SIZE=100
# Timezone for scheduler execution
OVERDUE_INVOICE_TIMEZONE=UTC

